{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@unorn/preset-react-native": ["./packages/preset-react-native/src/index.ts"],
      "@unorn/core": ["./packages/core/src/index.ts"],
      "@unorn/transformer": ["./packages/transformer/src/index.ts"]
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["coverage", "docs", "eslint.config.js"]
}
