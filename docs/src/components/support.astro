---
import { Icon } from '@astrojs/starlight/components'

interface Props {
    attribute: string
    support: boolean
}

const { attribute, support } = Astro.props
---

<div class="support">
    <a>{attribute}</a>
    <Icon name={support ? 'approve-check' : 'close'} />
</div>

<style>
    .support {
        margin-top: 1rem;
        width: 50%;
        padding-left: 20px;
        padding-right: 20px;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }
</style>